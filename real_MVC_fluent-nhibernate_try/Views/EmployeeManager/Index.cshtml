@model IEnumerable<real_MVC_fluent_nhibernate_try.Models.Employee>

@{
    ViewBag.Title = "Index";
}
<p>
    @Html.ActionLink("新建员工", "Create",new { storeid = ViewBag.storeid })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeArtUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeArtUrl)
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id = item.EmployeeId }) |
            @Html.ActionLink("详情", "Details", new { id = item.EmployeeId }) |
            @Html.ActionLink("删除", "Delete", new { id = item.EmployeeId })
        </td>
    </tr>
}

</table>
